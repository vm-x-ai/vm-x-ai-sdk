{
  "name": "examples-nodejs",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/examples/nodejs/src",
  "projectType": "library",
  "tags": ["examples", "nodejs"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/examples/nodejs",
        "main": "packages/examples/nodejs/src/index.ts",
        "tsConfig": "packages/examples/nodejs/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "examples": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node -r tsconfig-paths/register src/{args.filename} \"{args.message}\" {args.resource}",
        "cwd": "packages/examples/nodejs"
      }
    },
    "chat": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node -r tsconfig-paths/register src/chat.ts",
        "cwd": "packages/examples/nodejs"
      }
    }
  }
}
