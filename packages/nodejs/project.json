{
  "name": "nodejs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nodejs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nodejs",
        "main": "packages/nodejs/src/index.ts",
        "tsConfig": "packages/nodejs/tsconfig.lib.json",
        "assets": ["packages/nodejs/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {}
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/nodejs/release.config.cjs",
        "parallel": false
      },
      "dependsOn": ["build", "^release"]
    }
  },
  "tags": ["sdk", "nodejs"]
}
